{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="grid grid-rows-2 grid-cols-2 gap-16 w-full h-full">
    <div class="bg-slate-800 w-full h-full p-8 rounded">
        <h2 class="text-2xl font-bold ">Pending tickets</h2>
    </div>
    <div class="bg-slate-800 w-full h-full p-8 rounded">
        <h2 class="text-2xl font-bold">Projects</h2>
    </div>
    <div class="bg-slate-800 w-full h-full p-8 rounded">
        <h2 class="text-2xl font-bold">New feedbacks</h2>
        <div>
            {% for feedback in last_feedbacks %}
                <div class="bg-slate-900 p-4 my-3 rounded">
                    <div class="grid grid-cols-12 gap-4">
                        <div class="col-span-8">
                            <h3 class="text-xl font-bold">{{ feedback.title }}</h3>
                            <p>Deadline: {{ feedback.deadline }}</p>
                        </div>
                        <div class="col-span-4 col-end-13 flex flex-col justify-center items-end">
                            <a href="{{ path('password', {'feedback-id': feedback.id}) }}" class="bg-blue-500 text-white p-2 rounded-md">View details</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="bg-slate-800 w-full h-full p-8 rounded">
        <h2 class="text-2xl font-bold">Statistics</h2>
    </div>
</div>
{% endblock %}
